<div class="col-md-12">
  <h2 class="text-center"> Investments </h2>
  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> Title </th>
        <th> Current_price </th>
        <th> Option </th>
      </tr>
    </thead>

    <tbody>
      <% @investments.each do |investment| %>
        <tr>
          <td> # </td>
        <td> <%= link_to(investment[:name],investment[:url]) %> </td>
        <td> <%= investment[:current_price] %> </td>
        <td> <%= %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>